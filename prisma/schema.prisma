generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id           String        @id @default(uuid())
  name         String
  institution  String?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  transactions Transaction[]
}

model Transaction {
  id          String   @id @default(uuid())
  date        DateTime
  description String
  merchant    String
  amount      Float
  type        String
  category    String
  accountId   String
  statement   String
  confidence  Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  account Account @relation(fields: [accountId], references: [id])
}

model ImportMapping {
  id          String   @id @default(uuid())
  bankName    String   @unique
  mappingJson Json
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
